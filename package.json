{
  "name": "payments-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e-spec.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npx jest \"test/**/*.e2e-spec.ts\" --runInBand",
    "test:e2e:run": "npm run test:e2e:db:up && npm run test:e2e:db:migrate && npm run test:e2e",
    "test:e2e:db:up": "docker compose -f docker-compose.test.yml up -d && npm run test:e2e:db:wait",
    "test:e2e:db:wait": "node -e \"const exec = require('child_process').exec; let attempts = 0; const check = () => { exec('docker exec payments_postgres_test pg_isready -U postgres -d payments_test', (err) => { if (err && attempts++ < 30) { setTimeout(check, 1000); } else if (err) { console.error('Database not ready'); process.exit(1); } else { console.log('Database ready'); } }); }; check();\"",
    "test:e2e:db:migrate": "npx dotenv -e .env.test -- npx prisma migrate deploy",
    "test:e2e:db:down": "docker compose -f docker-compose.test.yml down",
    "test:e2e:db:reset": "npm run test:e2e:db:down && docker compose -f docker-compose.test.yml up -d --force-recreate -V && npm run test:e2e:db:wait && npm run test:e2e:db:migrate",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "temporal:worker": "ts-node -r tsconfig-paths/register src/modules/payments/infra/temporal/worker/TemporalWorker.ts",
    "temporal:check-workflows": "node -e \"const fs = require('fs'); const path = 'src/modules/payments/infra/temporal/workflows'; fs.readdirSync(path).forEach(f => { if (f.endsWith('.ts')) { if (/@modules|@shared/.test(fs.readFileSync(path + '/' + f, 'utf8'))) { console.error('❌ Forbidden alias found in ' + f); process.exit(1); } } }); console.log('✅ Workflows are clean!')\"",
    "temporal:start:credit-card": "ts-node -r tsconfig-paths/register scripts/start-credit-card-workflow.ts",
    "temporal:demo": "ts-node -r tsconfig-paths/register scripts/seed-and-start.ts",
    "temporal:signal": "ts-node -r tsconfig-paths/register scripts/signal-payment.ts",
    "start:docker": "npm run prisma:generate && npm run prisma:migrate:deploy && npm run start:dev"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/terminus": "^11.0.0",
    "@prisma/adapter-pg": "5.22.0",
    "@prisma/client": "5.22.0",
    "@temporalio/activity": "^1.14.0",
    "@temporalio/client": "^1.14.0",
    "@temporalio/worker": "^1.14.0",
    "@temporalio/workflow": "^1.14.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "joi": "^18.0.2",
    "pg": "^8.16.3",
    "prisma": "5.22.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.11",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/node": "^22.19.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  }
}
